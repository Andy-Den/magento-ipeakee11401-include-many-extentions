<?php $_items = $this->getReviewsCollection()->getItems();?>
<div class="hide" id="tabcontent_2">
    <?php if (count($_items)):?>
    <div class="box-title">
        <?php $store = Mage::getModel('core/store')->getCollection()->addFieldToFilter('name','Godfreys AU') ?>
        <?php foreach($store as $one) : ?>
        <?php endforeach ?>
    </div>

    <ul class="box-content" id="product-reviews-list">
        <?php foreach ($_items as $_review):?>
        <li>
            <h2><?php echo $this->htmlEscape($_review->getTitle()) ?></h2>

            <table class="data-table review-summary-table">
                <col />
                <col />
                <tbody>
                    <?php foreach ($_review->getRatingVotes() as $_vote): ?>
                <tr>
                    <td class="value">
                        <div class="rating-box">
                            <div class="rating" style="width:<?php echo $_vote->getPercent() ?>%;"></div>
                        </div>
                    </td>
                </tr>
                    <?php endforeach; ?>
                </tbody>
            </table>
            <p><?php echo nl2br($this->htmlEscape($_review->getDetail())) ?></p>
            <p class="date"><?php echo $this->__('Date | <span>%s</span>', $this->formatDate($_review->getCreatedAt()), 'long') ?></p>
        </li>
        <?php endforeach; ?>
    </ul>
    <div class="view_all">
        <p>View all</p>
    </div>
    <?php echo $this->getChildHtml('toolbar') ?>
    <?php endif;?>
    <?php echo $this->getChildHtml('product_review_form') ?>
</div>
