 */
?>
<?php $_menu = $this->renderCategoriesMenuHtml(0,'level-top') ?>
<?php if($_menu): ?>
	<!--ul class="links" id="topnav">
		<?php echo $_menu ?>
		<?php echo $this->getLayout()->createBlock('cms/block')->setBlockId('top-links-static')->toHtml() ?>
	</ul-->
<?php endif ?>

<?php $category = Mage::getModel('catalog/category')->load(221) ?>
<?php $categories = $category->getChildrenCategories(); ?>
<?php $_count = is_array($categories)?count($categories):$categories->count(); ?>
<?php if($_count): ?>
	<ul class="links" id="topnav">
		<?php foreach ($categories as $_category): ?>
			<?php if($_category->getIsActive()): ?>
			<li class="level0 nav-1 level-top">
				<a class="level-top" href="<?php echo str_replace('contact-us','contacts',$this->getCategoryUrl($_category)) ?>">
					<span><?php echo $this->htmlEscape($_category->getName()) ?></span>
				</a>
			</li>
			<?php endif; ?>
		<?php endforeach ?>
	</ul>
<?php endif ?>