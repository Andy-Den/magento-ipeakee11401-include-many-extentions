/**
 * Cart cross sell items template
 *
 * @see Mage_Checkout_Block_Cart_Crosssell
 */
?>
<?php if($this->getItemCount()): ?>
    <div class="sidebar-box" id="recently-viewed">
        <h2><?php echo $this->__('You may also like'); ?></h2>
        <ul>
            <?php foreach ($this->getItems() as $_item): ?>
            <li>
                <a href="<?php echo $_item->getProductUrl() ?>"><img src="<?php echo $this->helper('catalog/image')->init($_item, 'thumbnail')->resize(42); ?>" width="42" alt="<?php echo $this->htmlEscape($_item->getName()) ?>" title="<?php echo $this->htmlEscape($_item->getName()) ?>" />
                <small><?php echo $this->htmlEscape($_item->getName()) ?></small>
                <b><?php echo $this->getPriceHtml($_item, true) ?></b></a>
            </li>
            <?php endforeach; ?>
        </ul>
        <div class="box-foot"></div>
    </div>
<?php endif; ?>
