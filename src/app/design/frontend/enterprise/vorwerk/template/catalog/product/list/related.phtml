<?php $_items = $this->getItems(); ?>
<?php if ($_items->getSize()) : ?>
<div class="box-collateral box-related">

    <h3><?php echo $this->__('Related Products'); ?></h3>

    <?php foreach($_items as $_item) : ?>
        <ul class="block-content">
            <li class="item">
                <a href="<?php echo $_item->getProductUrl(); ?>" class="product-image">
                    <img src="<?php echo $this->helper('catalog/image')->init($_item, 'small_image')->resize(63); ?>" alt="<?php echo $this->escapeHtml($_item->getName()); ?>">
                </a>
                <div class="product-details">
                    <h4 class="product-name">
                        <a href="<?php echo $_item->getProductUrl(); ?>"><?php echo $this->escapeHtml($_item->getName()); ?></a>
                    </h4>
                    <div class="product-short-description">
                        <p><?php echo $this->escapeHtml($_item->getShortDescription()); ?></p>
                    </div>
                    <p class="product-more">
                        <a href="<?php echo $_item->getProductUrl(); ?>" class="link-intern"><?php echo $this->__('More'); ?></a>
                    </p>
                </div>
            </li>
        </ul>
    <?php endforeach; ?>

</div>
<?php endif; ?>
