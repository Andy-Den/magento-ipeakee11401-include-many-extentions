?>
<?php if($this->getItemCount()): ?>
    <div class="sidebar-box" id="recently-viewed">
        <h2><?php echo $this->__('You may also like'); ?></h2>
        <div class=" jcarousel-crossell">
        <div class="jcarousel-container jcarousel-container-vertical">
            <div class="jcarousel-clip jcarousel-clip-vertical">
                <ul id="mycarousel" class="jcarousel jcarousel-skin-tango">
                    <?php foreach ($this->getItems() as $_item): ?>
                    <li>
                            <?php $_product = Mage::getModel('catalog/product')->load($_item->getId()); ?>
                            <a href="<?php echo $_item->getProductUrl() ?>"><img src="<?php echo $this->helper('catalog/image')->init($_item, 'thumbnail')->resize(65); ?>" width="65" alt="<?php echo $this->htmlEscape($_item->getName()) ?>" title="<?php echo $this->htmlEscape($_item->getName()) ?>" /></a>
                            <small><?php echo $this->htmlEscape($_item->getName()) ?></small>
                            <div class="crossell_box"><b><?php echo $this->helper('core')->currency($_item->getFinalPrice()); ?></b>
                                <input class="input-text input-crossell" type="checkbox" value="<?php echo $_item->getId();?>" id="product_crossell_<?php echo $_item->getId();?>"  /> 
                                <input id="input_id_<?php echo $_product->getId(); ?>" type="hidden" value="<?php echo $this->helper('checkout/cart')->getAddUrl($_product); ?>"
                            </div>
                    </li>
                    <?php endforeach; ?>
                </ul>
            </div>
            <div class="jcarousel-prev jcarousel-prev-vertical"></div>
            <div  class="jcarousel-next jcarousel-next-vertical"></div>
        </div>
        <div class="box-foot">
            <form method="post" action="" id="form_submit_crossell">
                <button type="submit"  class="button"><?php echo $this->__('add Items to cart') ?></button>
                <div class="no-display">
                        <input type="hidden" name="related_product" id="related-products-field" value="" />
                </div>
            </form>
        </div>
    </div>
<?php endif; ?>

