    <script type="text/javascript">
		$j1_6('#nav-menu ul li .level0').last().css({'color':'#49494b'});
		function changeImage(url,name, menunum){				
			if(url){				
				$j1_6("#category_image_"+ menunum).css({'display':'block'});//to show image in sub sub categories
				document.getElementById("category_image_"+menunum).src = url;
				$j1_6("ul.submenu li.aside .product-image").css({'display':'block'});							
			}
			else{
				$j1_6("#category_image_"+ menunum).css({'display':'none'});
				$j1_6("ul.submenu li.aside .product-image").css({'display':'none'});	
			}
			$j1_6("#sub_category_name_"+menunum).css({'display':'block'});
			$j1_6(".product-desc").css({'display':'block'});			
			$j1_6("#sub_category_name_"+menunum).text(name);
		}

		function changeUrl(menuurl, menunum,imageurl){
			$j1_6("ul.submenu li.aside .product-image").attr({'href':menuurl});
			$j1_6("#sub_category_name_"+menunum).attr({'href':menuurl});			
		}

		function changeInfo(menunum, children){
				$j1_6("#category_image_"+ menunum).css({'display':'none'});//to remove image in sub categories
				$j1_6("#sub_category_name_"+menunum).css({'display':'none'});
				$j1_6(".product-desc").css({'display':'none'});
				$j1_6("ul.submenu li.aside .product-image").css({'display':'none'});	
		}
		
    </script>