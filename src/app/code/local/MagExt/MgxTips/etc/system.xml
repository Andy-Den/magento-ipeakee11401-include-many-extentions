<config>
	<sections>
		<magext_mgxtips translate="label" module="mgxtips">
			<label>Attribute Description Tooltip</label>
			<tab>magext</tab>
			<frontend_type>text</frontend_type>
			<sort_order>100</sort_order>
			<show_in_default>1</show_in_default>
			<show_in_website>1</show_in_website>
			<show_in_store>1</show_in_store>
			<groups>
                <mgxtips translate="label">
                    <label>Attribute Description Tooltip</label>
                    <sort_order>900</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <switcher translate="label">
                            <label>Activate Description Tooltip</label>
                            <frontend_type>select</frontend_type>
                            <source_model>mgxtips/adminhtml_source_activate_description</source_model>
                            <sort_order>300</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </switcher>
                        <position>
                            <label>Tooltip Positioning</label>
                            <frontend_type>select</frontend_type>
                            <source_model>mgxtips/adminhtml_source_position</source_model>
                            <sort_order>301</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </position>
                        <fade>
                            <label>Fade Effect</label>
                            <frontend_type>select</frontend_type>
                            <source_model>mgxtips/adminhtml_source_fade</source_model>
                            <sort_order>311</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </fade>
                        <opacity>
                            <label>Transparency</label>
                            <frontend_type>select</frontend_type>
                            <source_model>mgxtips/adminhtml_source_opacity</source_model>
                            <sort_order>321</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </opacity>
                        <upload>
                            <label>Change Default Icon</label>
                            <frontend_type>image</frontend_type>
                            <backend_model>adminhtml/system_config_backend_image</backend_model>
                            <upload_dir config="system/filesystem/media" scope_info="1">magext/mgxtips</upload_dir>
                            <base_url type="media" scope_info="1">magext/mgxtips</base_url>
                            <sort_order>400</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </upload>
                    </fields>
                </mgxtips>
			</groups>
		</magext_mgxtips>
	</sections>
</config>