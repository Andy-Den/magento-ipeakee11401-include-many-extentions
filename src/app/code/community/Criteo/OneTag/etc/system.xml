<config>
    <sections>
        <Criteo_OneTag module="Criteo_OneTag">
            <label>Criteo</label>
			<tab>service</tab>
			<frontend_type>text</frontend_type>
			<show_in_default>1</show_in_default>
			<show_in_website>1</show_in_website>
			<show_in_store>1</show_in_store>
			<sort_order>10</sort_order>
			<groups>
                <settings translate="label">
                    <label>Criteo OneTag settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <expanded>1</expanded>
                    <fields>
						<partner_id translate="label">
                            <label>Criteo Partner ID</label>
                            <comment><![CDATA[If you're unaware of this value, please contact your commercial contact at Criteo.]]></comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <validate>required-entry</validate>
                        </partner_id>
						<cross_device translate="label">
                            <label>Enable Criteo cross-device</label>
                            <comment><![CDATA[Enable the Criteo cross-device solution.]]></comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </cross_device>
						<product_id translate="label">
                            <label>Use SKU for Product ID</label>
                            <comment><![CDATA[By default this should be set to "no". If the product ID's in the Criteo OneTag is not matching the product ID's from the feed, please select "yes" to enable the SKU's to be used as a product ID.]]></comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </product_id>
                    </fields>
                </settings>
				<feed_settings translate="label">
                    <label>Criteo feed settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>11</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <expanded>1</expanded>
                    <fields>
						<password translate="label">
                            <label>Feed password</label>
                            <comment><![CDATA[Your feed can be accessed by adding /criteo_feed to your shop URL. In order to password protect your feed, please specify a password. Once filled out, you will be able to access the feed through for example: http://shop.com/criteo_feed?password=mypassword]]></comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <validate>required-entry</validate>
                        </password>
						<url_tracking translate="label">
                            <label>URL Tracking</label>
                            <comment><![CDATA[The tracking code specified in this box will be appended to the URL in the feed. Please note that the ? character will be appended to the URL automatically.]]></comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </url_tracking>
                    </fields>
                </feed_settings>
            </groups>
        </Criteo_OneTag>
    </sections>
</config>