<?xml version="1.0"?>
<config>
	<modules>
		<Criteo_OneTag>
			<version>1.0.0</version>
		</Criteo_OneTag>
	</modules>
	<global>
		<models>
			<criteo_onetag_parameters>
				<class>Criteo_OneTag_Model_Page</class>
			</criteo_onetag_parameters>
		</models>
		<events>
			<controller_action_layout_load_before>
				<observers>
					<Criteo_OneTag_Model_Page_Observer>
						<type>singleton</type>
						<class>criteo_onetag_parameters/observer</class>
						<method>setCriteoParameters</method>
					</Criteo_OneTag_Model_Page_Observer>
				</observers>
			</controller_action_layout_load_before>
		</events>
		<blocks>
			<onetag_block>
				<class>Criteo_OneTag_TagBlock</class>
			</onetag_block>
		</blocks>
		<helpers>
			<Criteo_OneTag>
				<class>Criteo_OneTag_Helper</class>
			</Criteo_OneTag>
		</helpers>
	</global>
	<frontend>
		<layout>
			<updates>
				<criteo_onetag>
					<file>criteo/onetag.xml</file>
				</criteo_onetag>
			</updates>
		</layout>
		
		<routers>
			<Criteo_OneTag>
				<use>standard</use>
				<args>
					<module>Criteo_OneTag</module>
					<frontName>criteo_feed</frontName>
				</args>
			</Criteo_OneTag>
		</routers>
	</frontend>
	
	<default>
        <Criteo_OneTag>
            <settings>
                <partner_id></partner_id>
				<cross_device>1</cross_device>
                <product_id>0</product_id>
            </settings>
			<feed_settings>
				<password></password>
				<url_tracking></url_tracking>
			</feed_settings>
        </Criteo_OneTag>
    </default>
	
	<adminhtml>
        <acl>
            <resources>
                <all>
                    <title>Allow Everything</title>
                </all>
                <admin>
                    <children>
                        <system>
        	            <children>
                               <config>
                                   <children>
                                       <Criteo_OneTag>
                                            <title>Criteo OneTag</title>
                                            <sort_order>10</sort_order>
                                       </Criteo_OneTag>
                                   </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
    </adminhtml>
 </config>
